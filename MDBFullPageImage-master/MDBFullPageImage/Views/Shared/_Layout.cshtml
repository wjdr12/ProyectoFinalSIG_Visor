<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Recursos Geográficos</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/leafletv")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand" href="https://mdbootstrap.com/docs/jquery/" target="_blank">
                <strong>MDB</strong>
            </a>

            <!-- Collapse -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <!-- Left -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Index">
                            Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Visor">GeoVisor</a>
                    </li>
                </ul>

                
            </div>

        </div>
    </nav>
    <!-- Navbar -->

    @if (ViewBag.RenderIntro)
    {<!-- Full Page Intro -->
                <div class="view" style="background-image: url('https://images.pexels.com/photos/220201/pexels-photo-220201.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260'); background-repeat: no-repeat; background-size: cover;">

                    <!-- Mask & flexbox options-->
                    <div class="mask rgba-black-light d-flex justify-content-center align-items-center">

                        <!-- Content -->
                        <div class="text-center white-text mx-5 wow fadeIn">
                            <h1 class="mb-4">
                                <strong>Relaciones Geográficas</strong>
                            </h1>

                            <p>
                                <strong>
                                    Esta página web permite consumir los
                                    recursos geográficos realizados a través de PostgreSQL y colocarlos en un servidor de mapas para la creación
                                    de los servicios WMS y WFS permitiendo la interoperabilidad.
                                </strong>
                            </p>

                            <a target="_blank" href="/Home/Visor" class="btn btn-outline-white btn-lg">
                                Ir al Geovisor
                                <i class="fas fa-graduation-cap ml-2"></i>
                            </a>
                        </div>
                        <!-- Content -->

                    </div>
                    <!-- Mask & flexbox options-->

                </div>}
    <!-- Full Page Intro -->
    <!--Main layout-->
    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>


    <!--Footer-->
    <footer class="page-footer text-center font-small mt-4 wow fadeIn">

        
      
        <!--Copyright-->
        <div class="footer-copyright py-3">
            © 2020 Copyright:
            <a href="https://mdbootstrap.com/education/bootstrap/" target="_blank"> BCDW </a>
        </div>
        <!--/.Copyright-->

    </footer>
    <!--/.Footer-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatables")
    @RenderSection("scripts", required: false)
</body>
</html>
